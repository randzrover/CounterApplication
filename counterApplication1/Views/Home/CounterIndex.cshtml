@model counterApplication1.Models.Counter

@{
    ViewBag.Title = "CounterIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CounterIndex</h2>


@using (Html.BeginForm("CounterIndex","Home",FormMethod.Post,new { }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Counter</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h1 style="opacity:@Model.Value" name="Id">@Html.DisplayTextFor(model=>model.Id)</h1>
            <input type="hidden" name="IdValue" value="@Model.Id" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Click Me" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
